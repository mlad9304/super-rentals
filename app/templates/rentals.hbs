<div class="jumbo">
  <div class="right tomster"></div>
  <h2>Welcome!</h2>
  <p>We hope you find exactly what you're looking for in a place to stay.</p>
  {{#link-to "about" class="button"}}
    About Us
  {{/link-to}}
</div>

<ListFilter
  @filter={{action 'filterByCity'}}
  as |filterResults|
>
  <ul class="results">
    {{#each filterResults as |rental|}}
      <li><RentalListing @rental={{rental}} /></li>
    {{/each}}
  </ul>
</ListFilter>